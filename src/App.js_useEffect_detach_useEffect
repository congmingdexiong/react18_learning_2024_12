/***
 * * Clear Effect
 */
import React, { useEffect, useState } from 'react';

export default function App() {
  const [show, setShow] = useState(true);
  return (
    <div>
      App
      {show && <Son />}
      <button onClick={() => setShow(false)}>卸载Son组件</button>
    </div>
  );
}

function Son() {
  useEffect(() => {
    const timer = setInterval(() => {
      console.log('定时器执行中');
    }, 1000);

    return () => {
      clearInterval(timer);
    };
  }, []);
  return <div>this is son</div>;
}
